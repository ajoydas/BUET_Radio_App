        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.NotificationActivity"
            android:label="BUET RADIO" />
        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.SignInActivity"
            android:label="BUET RADIO Sign in" />
        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.ProfileActivity"
            android:label="BUET RADIO User Profile" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.ChatActivity"
            android:label="BUET RADIO ChatRoom"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.PlayerActivity"
            android:label="BUET Radio Player"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.WebLoad"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="BUET Radio Rewind"></activity>
        <activity
            android:name="appinventor.ai_ppd1994.buetradioblue.Activity.RequestActivity"
            android:label="BUET RADIO Request"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="appinventor.ai_ppd1994.buetradioblue.Activity.HelperActivity" />
        <activity android:name="appinventor.ai_ppd1994.buetradioblue.Activity.EditEvents"></activity>
        <activity android:name="appinventor.ai_ppd1994.buetradioblue.Activity.MyIntro"
            android:label="My Introduction" />
    </application>

</manifest>